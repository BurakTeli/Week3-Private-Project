@model IEnumerable<LibraryManagement.Models.Author>

<h2>Authors List</h2>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", "Author", new { id = author.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Author", new { id = author.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Author", new { id = author.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Author")">Create New Author</a>
