@model LibraryManagementSystem.Models.AuthorViewModel

@{
    ViewData["Title"] = "Add New Author";
}

<!-- Author Creation Page Styling -->
<style>
    .form-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 25px;
        font-family: 'Poppins', sans-serif;
    }

    .card-custom {
        border: none;
        border-radius: 12px;
        background: linear-gradient(135deg, #1D2671, #C33764);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        color: #fff;
    }

    .card-header-custom {
        background: transparent;
        font-size: 1.6rem;
        font-weight: bold;
        padding: 20px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .card-body-custom {
        padding: 30px;
    }

    label {
        font-weight: 500;
        color: #ddd;
    }

    .form-control {
        border-radius: 8px;
        border: none;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .form-control:focus {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        outline: none;
        box-shadow: none;
    }

    .btn-custom {
        background: #FFD700;
        color: #2C3E50;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background: #FF6B6B;
        transform: translateY(-2px);
    }

    .btn-outline-custom {
        background: transparent;
        color: #FFD700;
        border: 2px solid #FFD700;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-outline-custom:hover {
        background: #FFD700;
        color: #2C3E50;
    }
</style>

<div class="form-container">
    <div class="card-custom">
        <div class="card-header-custom">
            Add New Author
        </div>
        <div class="card-body-custom">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" required />
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" required />
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" asp-for="DateOfBirth" required />
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="List" class="btn-outline-custom me-2" title="Cancel">
                        <i class="bi bi-arrow-left-circle"></i>
                    </a>
                    <button type="submit" class="btn-custom" title="Save">
                        <i class="bi bi-check-circle"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>