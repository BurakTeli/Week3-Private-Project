@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Privacy Policy Page Styling -->
<style>
    .privacy-container {
        max-width: 850px;
        margin: 50px auto;
        padding: 35px;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #1D2B64, #8A2387);
        color: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .privacy-title {
        font-size: 2.2rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
        color: #FFD700;
    }

    .privacy-text {
        font-size: 1.1rem;
        line-height: 1.7;
        margin-bottom: 20px;
    }

    .contact-info {
        text-align: center;
        font-size: 1rem;
        font-weight: 600;
    }
</style>

<div class="privacy-container">
    <h1 class="privacy-title">Privacy Policy</h1>
    <p class="privacy-text">
        Your privacy is of utmost importance to us. This page outlines the types of information we collect,
        how it is used, and the measures we take to ensure data security.
    </p>
    <p class="privacy-text">
        We only collect personal data that is necessary to provide and enhance our services. Under no circumstances
        do we sell or share your information with third parties without your explicit consent.
    </p>
    <p class="privacy-text">
        Our platform is committed to adhering to global privacy standards, including GDPR and CCPA regulations.
    </p>
    <p class="contact-info">
        If you have any questions regarding your privacy, please reach out to us at: privacy@innovatex.com
    </p>
</div>
