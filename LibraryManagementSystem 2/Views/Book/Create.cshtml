@model LibraryManagementSystem.Models.BookViewModel

@{
    ViewData["Title"] = "Add New Book";
}

<!-- Add New Book Page Styling -->
<style>
    .form-container {
        max-width: 550px;
        margin: 50px auto;
        padding: 30px;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #2C3E50, #4CA1AF);
        color: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .card-custom {
        border: none;
        border-radius: 15px;
        background: linear-gradient(135deg, #1D2671, #C33764);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        color: #fff;
    }

    .card-header-custom {
        background: transparent;
        font-size: 1.6rem;
        font-weight: bold;
        padding: 20px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .card-body-custom {
        padding: 30px;
    }

    label {
        font-weight: 500;
        color: #ddd;
    }

    .form-control {
        border-radius: 10px;
        border: none;
        padding: 12px;
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .form-control:focus {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
        outline: none;
        box-shadow: none;
    }

    .btn-custom {
        background: #FFD700;
        color: #2C3E50;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background: #FF6B6B;
        transform: translateY(-2px);
    }

    .btn-outline-custom {
        background: transparent;
        color: #FFD700;
        border: 2px solid #FFD700;
        border-radius: 25px;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .btn-outline-custom:hover {
        background: #FFD700;
        color: #2C3E50;
    }
</style>

<div class="form-container">
    <div class="card-custom">
        <div class="card-header-custom">
            Add a New Book
        </div>
        <div class="card-body-custom">
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Book Title</label>
                    <input asp-for="Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Genre" class="form-label">Genre</label>
                    <input asp-for="Genre" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="AuthorId" class="form-label">Author</label>
                    <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.Authors">
                        <option value="">Select an Author...</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="ISBN" class="form-label">ISBN</label>
                    <input asp-for="ISBN" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="PublishDate" class="form-label">Publish Date</label>
                    <input type="date" asp-for="PublishDate" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="CopiesAvailable" class="form-label">Copies Available</label>
                    <input type="number" asp-for="CopiesAvailable" class="form-control" required />
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="List" class="btn-outline-custom me-2" title="Back">
                        <i class="bi bi-arrow-left-circle"></i>
                    </a>
                    <button type="submit" class="btn-custom" title="Create">
                        <i class="bi bi-check-circle"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
